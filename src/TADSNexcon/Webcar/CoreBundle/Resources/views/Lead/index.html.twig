{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lead list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cpf</th>
                <th>Name</th>
                <th>Email</th>
                <th>Sex</th>
                <th>Birthday</th>
                <th>Cep</th>
                <th>City</th>
                <th>Uf</th>
                <th>Street</th>
                <th>Neighborhood</th>
                <th>Ddd</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('lead_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.cpf }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.sex }}</td>
                <td>{{ entity.birthday }}</td>
                <td>{{ entity.cep }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.uf }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.neighborhood }}</td>
                <td>{{ entity.ddd }}</td>
                <td>{{ entity.phone }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('lead_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('lead_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('lead_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
